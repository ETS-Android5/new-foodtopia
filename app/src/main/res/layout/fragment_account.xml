<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment">
    

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/account_picture_profile"
            android:layout_margin="25dp"
            />


        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@+id/profile_pic"
            android:textSize="21sp" />

<!--        <ImageButton-->
<!--            android:id="@+id/edit_btn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="45dp"-->
<!--            android:layout_toEndOf="@+id/profile_name"-->
<!--            android:background="#00000000"-->
<!--            android:src="@drawable/account_icon_edit" />-->

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_toEndOf="@+id/profile_pic"
            android:textSize="15sp" />


    </RelativeLayout>

    <ListView
        android:id="@+id/profile_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_list"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/account_background_profile_btn"
        android:drawableLeft="@drawable/account_icon_logout"
        android:paddingLeft="10dp"
        android:text="登出"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>