<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/addTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="紀錄"
            android:textColor="#181725"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="80dp"
            android:fillViewport="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addTitleText"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--早餐-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/breakfastCard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/down_shadow"
                    app:cardBackgroundColor="#F2FFE5"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--    上方淺綠色的那一條       -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="#C1F46E">

                            <ImageView
                                android:id="@+id/sunriseImgView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="10dp"
                                android:src="@drawable/sunrise" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/sunriseImgView"
                                android:padding="10dp"
                                android:text="早餐"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/breakfastKcalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="0 kcal"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <!--餐點                -->
                        <TextView
                            android:id="@+id/breakfastText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            android:text="全麥吐司\n豆漿"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--午餐        -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/lunchCard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/down_shadow"
                    app:cardBackgroundColor="#E5FFFA"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--    上方的那一條       -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="#6EF4CC">

                            <ImageView
                                android:id="@+id/sunImgView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="10dp"
                                android:src="@drawable/sun" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/sunImgView"
                                android:padding="10dp"
                                android:text="午餐"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/lunchKcalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="0 kcal"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <!--餐點                -->
                        <TextView
                            android:id="@+id/lunchText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            android:text="海鮮意麵\n紅茶"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--晚餐        -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/dinnerCard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/down_shadow"
                    app:cardBackgroundColor="#FFECE5"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--    上方的那一條       -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="#F46E6E">

                            <ImageView
                                android:id="@+id/sunsetImgView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="10dp"
                                android:src="@drawable/sunset" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/sunsetImgView"
                                android:padding="10dp"
                                android:text="晚餐"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/dinnerKcalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="0 kcal"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <!--餐點                -->
                        <TextView
                            android:id="@+id/dinnerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            android:text="壽司\n燒仙草"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--點心        -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/dessertCard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dinnerCard"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/down_shadow"
                    app:cardBackgroundColor="#E5F1FF"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--    上方的那一條       -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="#816EF4">

                            <ImageView
                                android:id="@+id/smileImgView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="10dp"
                                android:src="@drawable/smile" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/smileImgView"
                                android:padding="10dp"
                                android:text="點心"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/dessertKcalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="0 kcal"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <!--餐點                -->
                        <TextView
                            android:id="@+id/dessertText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            android:text="堅果"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </ScrollView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/add_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@color/blue_btn"
            android:textColor="@color/white"
            app:icon="@drawable/ic_baseline_add_24"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--Floating action button for 上傳照片-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/upload_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue_btn"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/add_fab"
            app:layout_constraintEnd_toEndOf="@+id/add_fab"
            app:srcCompat="@drawable/upload"
            app:tint="@color/white" />
        <!--Action name text for the 上傳照片-->
        <TextView
            android:id="@+id/add_upload_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="上傳照片"
            android:padding="4dp"
            android:textColor="@color/white"
            android:background="@drawable/add_text_rounded_corner"
            app:layout_constraintBottom_toBottomOf="@+id/upload_fab"
            app:layout_constraintEnd_toStartOf="@+id/upload_fab"
            app:layout_constraintTop_toTopOf="@+id/upload_fab" />
        <!--Floating action button for 拍照-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/camera_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue_btn"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/upload_fab"
            app:layout_constraintEnd_toEndOf="@+id/upload_fab"
            app:layout_constraintStart_toStartOf="@+id/upload_fab"
            app:srcCompat="@drawable/camera"
            app:tint="@color/white" />
        <!--Action name text for the 拍照-->
        <TextView
            android:id="@+id/add_camera_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="拍攝照片"
            android:padding="4dp"
            android:textColor="@color/white"
            android:background="@drawable/add_text_rounded_corner"
            app:layout_constraintBottom_toBottomOf="@+id/camera_fab"
            app:layout_constraintEnd_toStartOf="@+id/camera_fab"
            app:layout_constraintTop_toTopOf="@+id/camera_fab" />
        <!--Floating action button for 手動紀錄-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/manual_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue_btn"
            app:fabSize="normal"
            app:layout_constraintBottom_toTopOf="@+id/camera_fab"
            app:layout_constraintEnd_toEndOf="@+id/camera_fab"
            app:layout_constraintStart_toStartOf="@+id/camera_fab"
            app:srcCompat="@drawable/edit"
            app:tint="@color/white" />
        <!--Action name text for the 手動紀錄-->
        <TextView
            android:id="@+id/add_manual_action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="手動輸入"
            android:padding="4dp"
            android:textColor="@color/white"
            android:background="@drawable/add_text_rounded_corner"
            app:layout_constraintBottom_toBottomOf="@+id/manual_fab"
            app:layout_constraintEnd_toStartOf="@+id/manual_fab"
            app:layout_constraintTop_toTopOf="@+id/manual_fab" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>