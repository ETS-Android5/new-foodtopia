<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="輸入"
            android:textColor="#181725"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <ScrollView
            android:id="@+id/add_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:fillViewport="true"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--早餐-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/breakfastCard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/down_shadow"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--    上方的那一條       -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="@color/light_purple">

                            <ImageView
                                android:id="@+id/sunriseImgView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="10dp"
                                android:src="@drawable/sunrise" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/sunriseImgView"
                                android:padding="10dp"
                                android:text="早餐"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/breakfastKcalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="354 kcal"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <!--餐點                -->
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/breakfastText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="left"/>
                            <TextView
                                android:id="@+id/breakfastQuantifier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/gray"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="1dp"
                            android:background="@color/gray" />

                        <Button
                            android:id="@+id/addBreakfastBtn"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="新增"
                            android:textColor="@color/gray"
                            app:icon="@drawable/ic_baseline_add_24"
                            app:iconTint="@color/dark_purple" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--午餐        -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/lunchCard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/down_shadow"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--    上方的那一條       -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="@color/light_purple">

                            <ImageView
                                android:id="@+id/sunImgView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="10dp"
                                android:src="@drawable/sun" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/sunImgView"
                                android:padding="10dp"
                                android:text="午餐"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/lunchKcalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="354 kcal"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <!--餐點                -->
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/lunchText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="left"/>
                            <TextView
                                android:id="@+id/lunchQuantifier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/gray"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="1dp"
                            android:background="@color/gray" />

                        <Button
                            android:id="@+id/addLunchBtn"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="新增"
                            android:textColor="@color/gray"
                            app:icon="@drawable/ic_baseline_add_24"
                            app:iconTint="@color/dark_purple" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--晚餐        -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/dinnerCard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/down_shadow"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--    上方的那一條       -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="@color/light_purple">

                            <ImageView
                                android:id="@+id/sunsetImgView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="10dp"
                                android:src="@drawable/star" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/sunsetImgView"
                                android:padding="10dp"
                                android:text="晚餐"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/dinnerKcalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="354 kcal"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <!--餐點                -->
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/dinnerText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="left"/>
                            <TextView
                                android:id="@+id/dinnerQuantifier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/gray"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="1dp"
                            android:background="@color/gray" />

                        <Button
                            android:id="@+id/addDinnerBtn"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="新增"
                            android:textColor="@color/gray"
                            app:icon="@drawable/ic_baseline_add_24"
                            app:iconTint="@color/dark_purple" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!--點心        -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/dessertCard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dinnerCard"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="@drawable/down_shadow"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--    上方的那一條       -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:background="@color/light_purple">

                            <ImageView
                                android:id="@+id/smileImgView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:padding="10dp"
                                android:src="@drawable/smile" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/smileImgView"
                                android:padding="10dp"
                                android:text="點心"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/dessertKcalText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="354 kcal"
                                android:textColor="#ffffff" />

                        </RelativeLayout>
                        <!--餐點                -->
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center">
                            <TextView
                                android:id="@+id/dessertText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:gravity="left"/>
                            <TextView
                                android:id="@+id/dessertQuantifier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/gray"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="1dp"
                            android:background="@color/gray" />

                        <Button
                            android:id="@+id/addDessertBtn"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="新增"
                            android:textColor="@color/gray"
                            app:icon="@drawable/ic_baseline_add_24"
                            app:iconTint="@color/dark_purple" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</FrameLayout>