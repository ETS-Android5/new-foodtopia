<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_analysis_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/textView_analysis_prediction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburger"
            android:layout_toEndOf="@+id/textView_analysis_number"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信心程度 : "
            android:layout_toStartOf="@+id/textView_analysis_confidence"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/textView_analysis_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="67%"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>
</LinearLayout>