<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        //標題:首頁
        <TextView
            android:id="@+id/title_dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="首頁"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="15dp"
            android:textColor="#181725"
            android:textAlignment="center"/>
        //熱量圓形示意圖
        <RelativeLayout
            android:id="@+id/circular_container"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                app:cpb_background_progressbar_color="@color/remaining"
                app:cpb_background_progressbar_width="25dp"
                app:cpb_progress="70"
                app:cpb_progress_direction="to_right"
                app:cpb_progress_max="100"
                app:cpb_progressbar_color="@color/taken"
                app:cpb_progressbar_width="15dp"
                app:cpb_round_border="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="350\nkcal"
                android:textAlignment="center"
                android:textSize="40dp" />

        </RelativeLayout>
        //圓形示意圖顏色標示(以攝取量)
        <TextView
            android:id="@+id/standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/circular_container"
            android:layout_below="@id/circular_container"
            android:textSize="20dp"
            android:text="Taken"
            android:drawableStart="@drawable/circle_taken"
            android:drawablePadding="10dp"/>
        //圓形示意圖顏色標示(剩餘攝取量)
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/circular_container"
            android:layout_below="@id/circular_container"
            android:textSize="20dp"
            android:text="Remaining"
            android:drawableStart="@drawable/circle_remain"
            android:drawablePadding="10dp"/>
        //副標:營養素攝取量
        <TextView
            android:id="@+id/nutrition"
            android:layout_below="@+id/standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:text="營養素攝取量"
            android:textAlignment="center"
            android:textSize="20sp" />
        //營養素攝取量直方圖
        <LinearLayout
            android:id="@+id/nutritionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nutrition"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            //碳水化合物直方圖
            <ProgressBar
                android:id="@+id/carbon"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="126"
                android:progress="79"
                android:indeterminate="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textColorHint="#7A8089"
                android:textSize="15sp"
                android:text="剩餘 47g"/>

        </LinearLayout>
        //營養素直方圖顏色標示
        <TextView
            android:id="@+id/nutritionMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nutritionBar"
            android:layout_below="@id/nutritionBar"
            android:textSize="20dp"
            android:text="以攝取量"
            android:drawableStart="@drawable/circle_taken"
            android:drawablePadding="10dp"/>

    </RelativeLayout>

</FrameLayout>